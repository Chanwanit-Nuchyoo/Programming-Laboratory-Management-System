print('*** Perfect Number Verification ***')
a = int(input('Enter number :'))
if a<=0:
    print('Only positive number !!!')
sum = 0
list = []
b = a
while b != 1:
    for i in range(a):
        if i!=0:
            if b%i ==0:
                b = b/i
                list.append(i)
                sum = sum+i
if sum == a:
    print(str(a)+' is a PERFECT NUMBER.')
    print(list)
else:
    print(str(a)+' is NOT a perfect number.')
    print(list)
